// prisma/schema.prisma

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// The 'votes' table structure
model Vote {
  id            Int      @id @default(autoincrement())
  name          String
  voting_choice Boolean
  casted_at     DateTime @default(now())

  @@map("votes") // Ensures the table name in DB is 'votes'
}
